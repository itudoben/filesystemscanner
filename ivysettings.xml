<ivysettings>

  <properties file="${ivy.settings.dir}/ivysettings.properties"/>

  <caches>

    <cache
        name="mycache"
        basedir="${user.home}/.ivycache"
        artifactPattern="[organisation]/[artifact]/[revision]/[artifact]-[revision].[ext]"
        lockStrategy="no-lock"
        />

  </caches>

  <resolvers>
    <!--<filesystem name="myfs">-->
    <!--&lt;!&ndash;<ivy pattern="${repository.dir}/[module]/ivy-[revision].xml"/>&ndash;&gt;-->
    <!--<artifact pattern="${repository.dir}/[artifact]-[revision].[ext]"/>-->
    <!--</filesystem>-->

    <!--

    m2compatible="true"
    helps convert org with dots into a URL '/' as needed by maven repos

    -->

    <url name="mvnrepos" cache="mycache" m2compatible="true">
      <artifact
          pattern="http://repo1.maven.org/maven2/[organisation]/[artifact]/[revision]/[artifact]-[revision].[ext]"/>
    </url>

    <url name="centralrepos" cache="mycache" m2compatible="true">
      <artifact
          pattern="http://search.maven.org/remotecontent?filepath=[organisation]/[artifact]/[revision]/[artifact]-[revision].[ext]"/>
    </url>

    <url name="myurl" cache="mycache" m2compatible="true">
      <artifact
          pattern="http://johnny.hujol.free.fr/javarepository/[artifact]-[revision].[ext]"/>
    </url>

    <vfs name="vfs-resolver">
      <ivy pattern="ftp://user:pswd@ftpperso.free.fr/[module]/[revision]/ivy.xml"/>
      <artifact pattern="ftp://user:pswd@ftpperso.free.fr/[artifact]-[revision].[ext]"/>
    </vfs>

    <sftp name="myftp" host="ftpperso.free.fr" port="21">
      <ivy pattern="javarepository/[module]/[revision]/ivy.xml"/>
      <artifact pattern="javarepository/[artifact]-[revision].[ext]"/>
    </sftp>

  </resolvers>

  <modules>
    <module organisation="com.jh" name="*" resolver="myurl"/>
    <module organisation="jgoodies" name="*" resolver="myurl"/>
    <module organisation="*" name="*" resolver="mvnrepos"/>
    <module organisation="*" name="*" resolver="centralrepos"/>
  </modules>

</ivysettings>
